<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1" author="anders">
        <addColumn tableName="settings">
            <column name="name"
                    type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="key"
                    type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by"
                    type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addNotNullConstraint columnName="product_id" tableName="settings"/>
    </changeSet>
    <changeSet author="anders" id="2">
        <addUniqueConstraint
                columnNames="product_id, key"
                constraintName="product_id_and_key"
                tableName="settings"
        />
    </changeSet>

</databaseChangeLog>